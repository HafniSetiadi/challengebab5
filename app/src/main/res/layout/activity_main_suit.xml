<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySuit">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ivBatuDipilih"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/cayene"
        android:padding="5dp"
        android:text="Human"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/textComputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/ivBatuDipilih"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="@color/cayene"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Computer" />

    <ImageView
        android:id="@+id/ivGuntingDipilih"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/ivKertasDipilih"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/gunting"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/ivBatuDipilih"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/ivKertasDipilih"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/batu"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/ivKertasDipilih"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/kertas"
        android:background="@color/white"
        />

    <ImageButton
        android:id="@+id/ibReset"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/refresh"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/ivKertasC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/kertas"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/ivBatuC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_above="@id/ivKertasC"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/batu"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/ivGuntingC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ivKertasC"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/gunting"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/ivFontkgb"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fontkgb3"
        />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/fontvs"
        android:padding="15dp"
        />

</RelativeLayout>